<%= @application.name %><br>
<%= @application.status %><br><br>

  <b>This application's pets</b>
  <% @application.pets.each do |pet| %><br>
    <%= pet.name %><br>
    <% if @application.status == "Pending" %>
      <%= button_to "Approve #{pet.name}", admin_application_pet_path({application_id: @application.id, pet_id: pet.id, pet_status: 1}), method: :patch %>
      <%= button_to "Reject #{pet.name}", admin_application_pet_path({ application_id: @application.id, pet_id: pet.id, pet_status: 0 }), method: :patch %>
    <% elsif @application_pet.pet_status == 1 %>
      <%= @application_pet.pet_status %>
    <% end %>
  <% end %>
