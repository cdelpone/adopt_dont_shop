<%= @application.name %><br>
<%= @application.status %><br><br>

  <b>My Pets</b>
  <% @application.pets.each do |pet| %><br>
    <%= pet.name %><br>
    <% if @application.status == "Pending" %>
      <%= button_to 'Approve', admin_application_path({application_id: @application.id, pet_id: pet.id, pet_status: :status, application_status: @application.status}), params: :approve, method: :patch %>
      <%= button_to 'Reject', admin_application_path({application_id: @application.id, pet_id: pet.id, pet_status: :status, application_status: :approve}), params: :reject, method: :patch %>
    <% end %>
  <% end %>
